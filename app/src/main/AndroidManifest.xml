<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chaoxing.player">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.chaoxing.player.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.chaoxing.player.vitamio.VitamioListActivity" />
        <activity android:name="com.chaoxing.player.vitamio.MediaPlayerDemo" />
        <activity
            android:name="com.chaoxing.player.vitamio.VideoViewDemo"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation" />
        <activity android:name="com.chaoxing.player.vitamio.MediaPlayerDemo_Video" />
        <activity android:name="com.chaoxing.player.vitamio.MediaPlayerDemo_setSurface" />
        <activity android:name="com.chaoxing.player.vitamio.MediaPlayerDemo_Audio" />
        <activity android:name="com.chaoxing.player.vitamio.MediaMetadataRetrieverDemo" />
        <activity android:name="com.chaoxing.player.vitamio.MediaPlayerSubtitle" />
        <activity android:name="com.chaoxing.player.vitamio.VideoViewSubtitle" />
        <activity android:name="com.chaoxing.player.vitamio.VideoSubtitleList" />
        <activity android:name="com.chaoxing.player.vitamio.VideoViewBuffer" />

        <activity
            android:name="com.chaoxing.player.PlayerActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation" />
    </application>

</manifest>